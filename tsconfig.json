{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
